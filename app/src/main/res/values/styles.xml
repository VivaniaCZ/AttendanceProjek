<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorHint">@color/grey_back</item>
    </style>

    <style name="EditTextHint" parent="TextAppearance.AppCompat">
        <item name="colorAccent">@android:color/darker_gray</item>
        <item name="android:textColorHint">@color/grey_back</item>
        <item name="colorControlNormal">@color/grey_back</item>
        <item name="colorControlActivated">@color/grey_back</item>
        <item name="colorControlHighlight">@color/grey_back</item>

    </style>

</resources>
